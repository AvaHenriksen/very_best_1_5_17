<div class="page-header">
  <h1>
    Userbookmarks
    <a href="/userbookmarks/new" class="btn btn-lg btn-success">New Userbookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Bookmark</th>
        <th>Actions</th>
      </tr>

      <% @userbookmarks.each do |userbookmark| %>
      <tr>
        <td><%= userbookmark.user.email %></td>
        <td><%= userbookmark.bookmark.dish_id %></td>
        <td>
          <a href="/userbookmarks/<%= userbookmark.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == userbookmark.user %>
            <a href="/userbookmarks/<%= userbookmark.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_userbookmark/<%= userbookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @userbookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
